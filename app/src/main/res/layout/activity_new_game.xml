<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.unidue.mse.thewesleycrusher.schnitzeljagd.NewGameActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@color/colorAccent"
            android:layout_height="300dp" />

            <Button
                android:id="@+id/button_setgps"
                android:layout_width="125dp"
                android:layout_height="54dp"
                android:text="GPS"
                tools:layout_editor_absoluteX="201dp"
                tools:layout_editor_absoluteY="353dp" />
            <Button
                android:id="@+id/button_nextstop"
                android:layout_width="125dp"
                android:layout_height="54dp"
                android:text="Nächster Stop"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="432dp" />

    <Button
        android:id="@+id/btPhoto"
        android:layout_width="125dp"
        android:layout_height="54dp"
        android:text="Foto"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="353dp" />


    <Button
        android:id="@+id/btAbschließen"
        android:layout_width="125dp"
        android:layout_height="54dp"
        android:text="Abschließen"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="432dp" />



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
